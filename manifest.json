{
  "manifest_version": 3,
  "name": "open-os AI Browser Extension",
  "version": "0.4",
  "description": "Quick access to your favorite local LLM from your browser (Ollama).",
  "icons": {
    "128": "open-os-128.png"
  },
  "options_page": "options.html",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://*:11434/api/tags",
    "http://*:11434/api/generate",
    "https://*:11434/api/tags",
    "https://*:11434/api/generate"
  ],
  "action": {
    "default_popup": "open-os.html",
    "default_icon": "open-os.png"
  }
}

